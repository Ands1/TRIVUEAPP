<h1>Quiz Questions</h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Question</th>
      <th scope="col">Submit answer</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quiz_questions.each do |quiz_question| %>
      <tr>
        <td><%= quiz_question.id %></td>
        <td><%= quiz_question.question %></td>
        <td><%= link_to 'Submit answer', "/quizzes/#{quiz_question.quiz.id}/questions/#{quiz_question.id}/answers/new" %></td>
        <!--
        <td><%= link_to 'Show', quiz_questions_url %></td>
        <td><%= link_to 'Edit', edit_quiz_question_path(:id => quiz_question.id) %></td>
        <td><%= link_to 'Destroy', quiz_question_path(quiz_question.question, quiz_question), method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to '<i class="fa fa-arrow-left" aria-hidden="true"></i>'.html_safe, quizzes_path %>

