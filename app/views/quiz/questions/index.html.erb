<h1>Quiz Questions</h1>

<table>
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Question</th>
      <th scope="col">Answer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quiz_questions.each do |quiz_question| %>
      <tr>
        <td><%= quiz_question.id %></td>
        <td><%= quiz_question.question %></td>
        <td>
        <select name="carstatus" id="status">
          <option value="Status">True</option>  
          <option value="Status">False</option>  
        </select>  
        </td>
        <!--
        <td><%= link_to 'Show', quiz_questions_url %></td>
        <td><%= link_to 'Edit', edit_quiz_question_path(:id => quiz_question.id) %></td>
        <td><%= link_to 'Destroy', quiz_question_path(quiz_question.question, quiz_question), method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

