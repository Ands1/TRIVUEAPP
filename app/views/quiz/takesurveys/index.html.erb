<h1>Quiz Questions</h1>

<table>
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Question</th>
      <th scope="col">Answer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @takes.each do |take| %>
      <tr>
        <td><%= take.id %></td>
        <td><%= take.question %></td>
        <td>
        <select name="carstatus" id="status">
          <option value="Status">True</option>  
          <option value="Status">False</option>  
        </select>  
        </td>
        <td><%= link_to 'Submit' %></td>
       
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Back', quizzes_path %>


