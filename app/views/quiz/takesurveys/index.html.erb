<h1>Quiz Questions</h1>

<table class="table table-bordered ">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Question</th>
      <th scope="col">Answer</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @takes.each do |take| %>
      <tr>

        <td><%= take.id %></td>
        <td><%= take.question %></td>
        <td><%= take.status %></td>  
      </tr>
    <% end %>

  </tbody>
  
</table>


<br>
<%= link_to '<i class="fa fa-arrow-left" aria-hidden="true"></i>'.html_safe, quizzes_path %>


