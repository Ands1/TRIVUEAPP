<p id="notice"><%= notice %></p>

<h1>Quizzes</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col">End time</th>
      <th scope="col">Questions</th>
      <th scope="col">Ready?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quizzes.each do |quiz| %>
      <tr>
        <td><%= quiz.id %></td> 
        <td><%= quiz.name %></td> 
        <td><%= quiz.end_time %></td>
        <td><%= link_to 'Add Questions', new_quiz_question_url(quiz,@questions) %></td>
        <td><%= link_to 'Take Quiz', quiz_takesurveys_url(quiz,@quiz_takesurveys) %></td>
        <td><%= link_to 'Edit', edit_quiz_path(quiz) %></td>
        <td><%= link_to 'Destroy', quiz, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Quiz', new_quiz_path %>
